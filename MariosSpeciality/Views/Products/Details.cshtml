@model MariosSpeciality.Models.Product
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <h2>Details of</h2>
        <h4>@Model.Name</h4>
    </div>
    <div class="col-md-6">
    </div>
    <div class="col-md-3">
        <a href="@Url.Action("Index")" class="btn btn-lg btn-default">
            <i class="fa fa-2x fa-arrow-circle-left" aria-hidden="true"></i>
            <span>Back to list</span>
        </a>
    </div>
</div>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CountryOfOrigin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CountryOfOrigin)
        </dd>
        <dd>
            @if (Model.ProductImg != null)
            {
                String img64 = Convert.ToBase64String(Model.ProductImg);
                String img64Url = string.Format("data:image/" + Model.ProductImg + ";base64,{0}", img64); //imagetype can be e.g. gif, jpeg, png etc.
                <img src="@img64Url" />
            }
        </dd>
    </dl>
</div>
<div>
    <hr />
    <a href="@Url.Action("Edit", new { id = Model.ProductId})" class="btn btn-lg btn-info">
        <i class="fa fa-2x fa-pencil-square-o" aria-hidden="true"></i>
        <span>Edit</span>
    </a> |
    <a href="@Url.Action("Delete", new { id = Model.ProductId})" class="btn btn-lg btn-danger">
        <i class="fa fa-2x fa-trash" aria-hidden="true"></i>
        <span>Delete</span>
    </a> |

    <a href="@Url.Action("CreateReview", new { id = Model.ProductId})" class="btn btn-lg btn-warning">
        <i class="fa fa-2x fa-commenting-o" aria-hidden="true"></i>
        <span>Review Product</span>
    </a> |

    <a href="@Url.Action("Index")" class="btn btn-lg btn-default">
        <i class="fa fa-2x fa-arrow-circle-left" aria-hidden="true"></i>
        <span>Back to list</span>
    </a>
</div>
