@if (ViewBag.model != null)
{
    <div class="card-deck">

        @foreach (Product item in ViewBag.model["topThreeRated"])
        {
            <div class="card">
                <div class="card-block">
                    <h2 class="card-title">@item.Name-@item.AverageRating()</h2>
                    <a href="@Url.Action("GetReviewsForProduct", "Home", new { id = item.ProductId})"><p class="card-text">@item.Reviews.Count() total review(s)</p></a>
                </div>
                <img class="card-img-top" src="~/images/banner1.png" alt="Card image cap">
                <hr />
                <br />
            </div>
        }
    </div>
    <div>
        <h2 style="text-align: center">OUR MOST RECENTLY ADDED PRODUCTS</h2>
