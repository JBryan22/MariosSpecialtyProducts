@model MariosSpeciality.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">

        <h4>Product</h4>
        <hr />
        <div class="form-group">
            @Html.HiddenFor(model => model.ProductId)
            @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cost, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.Cost, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CountryOfOrigin, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.CountryOfOrigin, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProductImg, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                <input type="file" id="files" name="files" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-6">
                <input type="submit" value="Save" class="btn btn-lg btn-primary" />
            </div>
        </div>

    </div>

}

<a href="@Url.Action("Details", new { id = Model.ProductId})">
    <i class="fa fa-2x fa-arrow-circle-left" aria-hidden="true"></i>
    <span>Back to Details</span>
</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
