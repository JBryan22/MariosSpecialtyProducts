@model MariosSpeciality.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CountryOfOrigin, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.CountryOfOrigin, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Cost, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Cost, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductImg, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                <input type="file" id="files" name="files" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-6">
                <input type="submit" value="Create" class="btn btn-lg btn-primary" />
            </div>
        </div>
    </div>
}

<a href="@Url.Action("Index")" class="btn btn-default">
    <i class="fa fa-2x fa-arrow-circle-left" aria-hidden="true"></i>
    <span>Back to list</span>
</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
